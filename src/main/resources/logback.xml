<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://ch.qos.logback/xml/ns/logback" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback https://raw.githubusercontent.com/enricopulatzo/logback-XSD/master/src/main/xsd/logback.xsd">
    <!-- standard out put -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %c{1}:%L.%M - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- pokemon wiki log -->
    <property name="pokemon_wiki_log_home" value="/var/log/pokemon-wiki/"/>

    <appender name="pokemon_wiki_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${pokemon_wiki_log_home}/pokemon-wiki.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %c{1}:%L.%M - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>30</maxHistory>
            <fileNamePattern>${pokemon_wiki_log_home}/pokemon-wiki.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
    </appender>

    <logger name="cn.fantasticmao.pokemon.wiki" level="DEBUG" additivity="false">
        <appender-ref ref="pokemon_wiki_log"/>
    </logger>
</configuration>